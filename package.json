{
    "name": "test-ts-node-backend",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:AdrianMendez1199/test-ts-node-backend.git",
    "author": "Adrian Mendez <mendezadrian149@gmail.com>",
    "license": "MIT",
    "scripts": {
        "lint": "eslint  --ext .ts .",
        "clean": "rimraf dist",
        "transpile": "tsc",
        "build": "npm-run-all clean transpile copy-gql",
        "server": "node ./dist/index.js",
        "prod": "NODE_ENV=production npm-run-all build server",
        "dev": "NODE_ENV=development npm-run-all build server",
        "watch:dev": "nodemon",
        "copy-gql": "copyfiles src/api/graphql/**/*.graphql ./dist/src/api/graphql/schemas",
        "test": "NODE_ENV=test  jest --coverage",
        "start": "ts-node index.ts",
        "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "modulePathIgnorePatterns": [
            "dist"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "dependencies": {
        "apollo-server": "^2.16.0",
        "bcrypt": "^5.0.0",
        "dotenv": "^8.2.0",
        "graphql": "^15.3.0",
        "graphql-tools": "^6.0.14",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "pg": "^7.3.0",
        "reflect-metadata": "^0.1.10",
        "typeorm": "0.2.25"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/jest": "^26.0.7",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.0.27",
        "@types/oracledb": "^5.0.0",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "apollo-server-testing": "^2.16.0",
        "copyfiles": "^2.3.0",
        "eslint": "^7.5.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-airbnb-typescript": "^9.0.0",
        "eslint-plugin-import": "^2.22.0",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-cli": "^26.1.0",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.1.3",
        "ts-node": "3.3.0",
        "typescript": "^4.0.0"
    },
    "_moduleAliases": {
        "@root": ".",
        "@api": "dist/src/api",
        "@entity": "dist/entity",
        "@utils": "dist/utils"
    }
}
